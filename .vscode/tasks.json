{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "type": "npm",
      "script": "test",
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "type": "npm",
      "script": "build-clean",
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "type": "npm",
      "script": "tsdoc",
      "problemMatcher": ["$tsc"]
    }
  ]
}
