{
  "name": "comments-on-canvas",
  "version": "0.0.1",
  "description": "Comments on Canvas",
  "private": true,
  "main": "dist/server.js",
  "bin": {
    "server": "dist/server.js"
  },
  "files": [
    "dist/"
  ],
  "author": {
    "name": "CY Wang",
    "email": "smugen.mugen@outlook.com",
    "url": "https://github.com/smugen"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": "16.14.x"
  },
  "scripts": {
    "tsdoc": "typedoc && start tsdoc/index.html",
    "cspell": "cspell **/*",
    "lint": "eslint src test ./*.js --ext js,ts",
    "build": "tsc"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "cspell": "^6.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "rimraf": "^3.0.2",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "cspell lint --no-must-find-files",
    "*.{html,css,scss,json}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9"
  }
}
